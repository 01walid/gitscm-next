- @section = "functions"
- @page_title = "libgit2 - Functions"

%div#library-versions
  =link_to "Changelog", "#"
  %span.version-selection
    Version
    <select>
    <option>HEAD</option>
    <option>v0.17.0</option>
    <option>v0.16.0</option>
    <option>v0.15.0</option>
    <option>v0.14.0</option>
    <option>v0.13.0</option>
    <option>v0.12.0</option>
    <option>v0.11.0</option>
    <option>v0.10.0</option>
    <option>v0.8.0</option>
    <option>v0.3.0</option>
    <option>v0.2.0</option>
    <option>v0.1.0</option>
    </select>

  %ul.legend
    %li.new New
    %li.changed Changed
    %li.removed Removed

%div#main
  %div.two-column.library-functions
    - each_column do |cls, rows|
      %div{:class => "column-#{cls}"}
        - rows.each do |group|
          %h3
            =group_link group
            =link_to "Show all", "#", {:class => 'toggle'}
          %ul.library-functions
            - group.function_names.each do |f|
              %li= function_link f
